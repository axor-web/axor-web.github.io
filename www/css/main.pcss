.wrapper {
    box-sizing: border-box;
    width: 100%;
    max-width: 1530px;
    padding: 0 50px;
    margin: 0 auto;
}

body {
    overflow-x: hidden;
}

picture {
    display: block;
    height: auto;
    & img, & source {
        width: 100%;
        height: auto;
        display: block;
    }
}

.main {
    width: 100vw;
    &__background {
        position: absolute;
        top: 0;
        right: 0;
        min-width: 100vw;
        min-height: 100vh;
        z-index: -400;
    }
    &__hero {
        & .wrapper {
            display: flex;
            justify-content: space-between;
        }
        &-info {
            padding-top: 9.5vw;
            padding-bottom: 13vw; 
            width: 43vw;
            flex-shrink: 0;
            z-index: 200;
            & h1 {
                font-size: 4.3vw;
                color: var(--comBlack);
            }
            
            & p {
                color: var(--comGray);
                font-size: 1vw;
                margin: 1.5vw 0;
                line-height: 1.3vw;
            }
            &-buttons {
                & > div, a {
                    display: inline-block;
                }
                &-start {
                    padding: 1.35vw 3vw;
                    background: var(--comViolet);
                    border-radius: 60px;
                    font-size: 1vw;
                    color: #fff;
                }
    
                &-custom {
                    font-size: 1vw;
                    color: var(--comGray);
    
                    & a {
                        color: var(--comBlue);
                        font-weight: 700;
                    }
                }
            }
        }

        &-picture {
            width: 30vw;
            height: 10vw;
            position: absolute;
            right: 0;
            & > div {
                position: absolute;
                top: 0;
                right: 0;
                transition: transform 1s ease-out;
                & .img {
                    position: absolute;
                    right: 0;
                    display: block;
                }
            }
            div&-dots {
                top: 2vw;
                
                & .img {
                    &:nth-child(1) {
                        width: 13vw;
                        height: auto;
                        right: 10vw;
                    }
                    &:nth-child(2) {
                        height: 13vw;
                        width: auto;
                        right: 15vw;
                        top: 8.6vw;
                    }
                    &:nth-child(3) {
                        width: 13vw;
                        height: auto;
                        right: 0;
                        top: 15vw;
                    }
                }
            }
            div&-product {
                top: 10vw;
                & .img {
                    width: auto;
                    &:nth-child(1) {
                        height: 22vw;
                    }
                    &:nth-child(2) {
                        height: 2.8vw;
                        right: 15.5vw;
                        transform: translateY(-45%);
                    }
                    &:nth-child(3) {
                        height: 4vw;
                        right: 35vw;
                        top: 17vw;
                    }
                    &:nth-child(4) {
                        height: 3.5vw;
                        right: 3.5vw;
                        top: 21vw;
                    }
                }
            }
            div&-pics {
                top: 5vw;
                & .img {
                    width: auto;
                    &:nth-child(1) {
                        width: 15vw;
                        right: 28vw;
                    }
                    &:nth-child(2) {
                        width: 21vw;
                        right: 10vw;
                        top: 20vw;
                    }
                }
            }
        }
    }


    &__features {
        margin-bottom: 8vw;
        & h2 {
            font-size: 2.9vw;
            text-align: center;
            color: var(--comBlack);
            margin-bottom: 4vw;
            & span {
                color: #4E5572;
            }
        }
        &-cards {
            width: 100%;
            display: flex;
            justify-content: center;
            &-card {
                width: 22.4vw;
                margin: 0 1.8vw;

                &:hover & {
                    &-pic .img:nth-child(1), &-info h3 {
                        transform: translateY(-1vw);
                    }
                }
                &-pic {
                    position: relative;

                    & .img {
                        position: absolute;
                        transition: transform .5s;

                        &:nth-child(1) {
                            position: static;
                            width: 100%;
                            box-shadow: 0 0 20px #e0ecff;
                            border-radius: 1vw;
                        }
                    }
                }
                &-info {
                    padding: 2vw 0;
                    & h3 {
                        font-size: 2vw;
                        color: var(--comBlack);
                        transition: transform .3s;
                    }
                    & p {
                        font-size: 1vw;
                        color: var(--comGray);
                        padding: 1vw 0;
                        line-height: 1.5vw;
                    }
                    & a {
                        color: var(--comBlue);
                        display: block;
                    }
                }

                &:nth-child(1) {
                    
                }
                &:nth-child(1) &-pic {
                    & .img {
                       
                        &:nth-child(2) {
                            width: 3.5vw;
                            left: -4.3vw;
                            top: 0.3vw;
                            opacity: 1;
                            visibility: visible;
                        }
                        &:nth-child(3) {
                            width: 10.5vw;
                            left: -5.5vw;
                            top: 3vw;
                            box-shadow: 0 0 20px #e0ecff;
                            border-radius: 0.6vw;
                        }
                    }
                }
                
                
                &:nth-child(2) {
                    margin-top: 4vw;
                }
                &:nth-child(2) &-pic {
                    & .img {
                        width: 5.5vw;
                        box-shadow: 0 0 20px #e0ecff;
                        border-radius: 0.6vw;
                        &:nth-child(1) {
                            width: 100%;
                            border-radius: 1vw;
                        }
                        &:nth-child(2) {
                            left: 2.5vw;
                            top: -2.2vw;
                        }
                        &:nth-child(3) {
                            right: 1.9vw;
                            top: 1vw;
                        }
                        &:nth-child(4) {
                            left: 2.5vw;
                            top: 5.8vw;
                        }
                        &:nth-child(5) {
                            right: 5vw;
                            bottom: 4.7vw;
                        }
                        &:nth-child(6) {
                            left: 8vw;
                            bottom: -1.25vw;
                        }
                    }
                }
                
                &:nth-child(3) {
                    margin-top: 8vw;
                }
                &:nth-child(3) &-pic {
                    & .img {
                        &:nth-child(2) {
                            width: 6vw;
                            right: 2.5vw;
                            top: -6vw;
                        }
                        &:nth-child(3) {
                            width: 7.3vw;
                            left: 1.7vw;
                            top: -2.7vw;
                        }
                        &:nth-child(4) {
                            width: 8.9vw;
                            right: -3.4vw;
                            bottom: 3.3vw;
                        }
                    }
                }
            }
        }
    }



    &__documentation {
        position: relative;
        color: #fff;

        & .wrapper {
            max-width: 70vw;
            padding: 0 2.6vw;
        }

        & h3 {
            font-size: 2vw;
            line-height: 2.5vw;
        }
        & p {
            font-size: 0.94vw;
            line-height: 1.55vw;
        }

        &-background {
            width: 100vw;
            min-height: 100%;
            position: absolute;
            z-index: -300;
            right: 0;
            top: 0.5vw;
        }

        &-cards {
            &-card {
                display: flex;
                &-img {
                    position: relative;
                    text-align: center;
                    z-index: 1;
                    & .img {
                        &:first-child {
                            width: 22.5vw;
                            box-shadow: -1.3vw 1vw 2.3vw rgba(84, 48, 209, .4);
                        }
                        &:last-child {
                            position: absolute;
                            bottom: -3.5vw;
                            width: 22.5vw;
                            left: 0;
                            z-index: -100;
                        }
                        height: auto;
                        border-radius: 15px;
                        transition: transform 0.5s;
                    }
                }
                &-info {
                    width: 25vw;
                    &-button {
                        background: #70C217;
                        display: inline-block;
                        border-radius: 50px;
                        text-align: center;
                        padding: 1vw 1.4vw;
                        margin-top: 2vw;
                    }
                }

                &:first-child {
                    margin-bottom: 3vw;
                    & .img {
                        margin-right: 3.6vw;
                    }
                    & .main__documentation-cards-card-info {
                        margin-top: 7.5vw;
                    }
                }
                &:last-child {
                    justify-content: flex-end;
                    & .img {
                        margin-left: 3.6vw;
                        &:last-child {
                            left: none;
                            right: 0;
                        }
                    }
                    & .main__documentation-cards-card-info {
                        margin-top: 1.6vw;
                    }
                }
            }
        }


        &-picture {
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100%;
            z-index: -200;
            & > div {
                width: 100%;
                height: 100%;
                transition: transform 1s ease-out;
            }
            & div, & img {
                position: absolute;
            }
            &-dots {
                & img {
                    &:first-child {
                        width: 11vw;
                        top: 20.5vw;
                        left: 13vw;
                    }
                    &:last-child {
                        height: 11vw;
                        bottom: 7.5vw;
                        right: 8vw;
                    }
                }
            }

            &-circs {
                &[data-num="1"] {
                    & img {
                        width: 3.4vw;

                        &:first-child {
                            top: 7.6vw;
                            left: 11.3vw;
                        }
                        &:last-child {
                            top: 28vw;
                            right: 32vw;
                            z-index: 20;
                        }
                    }
                }

                &[data-num="2"] {
                    & img {
                        &:first-child {
                            width: 21vw;
                            top: 11vw;
                            left: 12.3vw;
                        }
                        &:last-child {
                            width: 13.6vw;
                            bottom: 18vw;
                            right: 10vw;
                        }
                    }
                }
            }
        }
    }


    &__testimonials {
        width: 100%;
        text-align: center;
        padding-top: 5vw;
        padding-bottom: 18vw;
        background: linear-gradient(180deg, rgba(236, 240, 253, 0) 0%, rgba(236, 240, 253, 0.53) 14%, #ECF0FD 46%, rgba(236, 240, 253, 0.43) 84%, rgba(236, 240, 253, 0) 100%);
        position: relative;
        z-index: 50;

        & .wrapper {
            width: 100%;
            z-index: 50;
        }
        &-info {
            z-index: 100;
            display: flex;
            flex-direction: column;
            align-items: center;
            & h2 {
                color: var(--comBlack);
                font-size: 3vw;
                margin-top: 7vw;
                margin-bottom: 5vw;
                z-index: 5;
            }
            &-cards {
                width: 100%;
                position: relative;
                perspective-origin: 50% 200%;
                height: 20vw;
                margin-bottom: 13%;
                z-index: 80;

                &-wrapper {
                    width: 38vw;
                    display: flex;
                    flex-direction: column;
                    z-index: 70;
                }
            }
            &-card {
                background: #fff;
                border-radius: 1vw;
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100%;
                top: 0;
                position: absolute;
                box-shadow: 0 1vw 2.7vw rgba(215, 228, 249, 0.5);
                user-select: none;

                & p {
                    color: var(--comGray);
                    display: inline-block;
                    position: relative;
                    padding: 12.5%;
                    font-size: 1.4vw;
                }
                & img {
                    position: absolute;
                    z-index: 0;
                    width: 32%;
                    top: 4%;
                }
            }
            &-arrows {
                height: 25px;
                align-self: flex-end;
                margin-right: 12%;
                z-index: 50;

                & .arrow {
                    display: inline-flex;
                    align-items: center;
                    justify-content: flex-end;
                    width: 50px;
                    height: 100%;
                    position: relative;
                    transition: transform .2s;
                    cursor: pointer;

                    & div {
                        position: absolute;
                        background: #000;
                        height: 4px;
                        border-radius: 4px;
                        &:nth-child(1) {
                            width: 100%;
                        }
                        &:nth-child(2) {
                            width: 20px;
                            right: 0;
                            transform: rotateZ(45deg) translateY(-8px);
                        }
                        &:nth-child(3) {
                            width: 20px;
                            right: 0;
                            transform: rotateZ(-45deg) translateY(8px);
                        }
                    }
                    &:first-child {
                        &:hover {
                            transform: translateX(-5px);
                        }
                        margin-right: 10px;
                            & div {
                            &:nth-child(2) {
                                left: 0;
                                transform: rotateZ(-45deg) translateY(-8px);
                            }

                            &:nth-child(3) {
                                left: 0;
                                transform: rotateZ(45deg) translateY(8px);
                            }
                        }
                    }
                    &:last-child {
                        &:hover {
                            transform: translateX(5px);
                        }
                    }
                    &.arrow_inactive {
                        transform: scale(0.5) !important;
                        cursor: default;
                        & div {
                            background: #acabb2;
                        }
                    }
                }
            }
        }

        &-picture {
            position: absolute;
            left: 0;
            top: 5vw;
            width: 100%;
            height: 100%;
            z-index: 0;

            &-img {
                width: 100%;
                transition: transform 1s ease-out;

                & .img {
                    height: auto;
                    position: absolute;

                    &:nth-child(1) {
                        width: 8vw;
                        top: 11.6vw;
                        left: 20.3vw;
                    }
                    &:nth-child(2) {
                        width: 6vw;
                        top: 22.8vw;
                        left: 5.3vw
                    }
                    &:nth-child(3) {
                        width: 7vw;
                        top: 40.6vw;
                        left: 13.3vw;
                    }


                    &:nth-child(4) {
                        width: 7vw;
                        top: 11vw;
                        right: 23.3vw;
                    }
                    &:nth-child(5) {
                        width: 10vw;
                        top: 24.3vw;
                        right: 12vw;
                    }
                    &:nth-child(6) {
                        width: 5vw;
                        top: 44vw;
                        right: 20.6vw;
                    }
                }
            }

            &-background {
                position: absolute;
                top: 5vw;
                left: 0;
                width: 100%;
                transition: transform 1s ease-out;

                & img {
                    width: 24.6vw;
                    position: absolute;

                    &:nth-child(1) {
                        top: 10vw;
                        right: 24.4vw;
                    }

                    &:nth-child(2) {
                        top: 25vw;
                        left: 24.7vw;
                    }
                }
            }
        }
    }
}



