@media screen and (min-width: 1051px) {
    body {
        overflow-y: scroll !important;
    }
}

@media screen and (min-width: 2000px) {
    .wrapper {
        max-width: 90%;
    }
}

@media screen and (max-width: 1050px) {
    .wrapper {
        padding: 0 20px;
    }
    .main {
        &__hero {
            & p, &-buttons > div, a {
                font-size: 2vw;
            }
            & .wrapper {
                flex-direction: column;
            }
            &-info {
                width: 100%;
                max-width: 600px;
                margin: 150px auto 0 auto;
                &-buttons {
                    &-start {
                        padding: 25px 60px;
                    }
                    &-custom {
                        font-size: 18px;
                    }
                }
                & h1 {
                    font-size: 9vw;
                }
                & p {
                    line-height: normal;
                }
            }
            &-picture {
                position: relative;
                width: 100%;
                min-height: 85vw;
                div&-dots {
                    top: 0;
                    & .img {
                        &:nth-child(1) {
                            width: 100px;
                            right: 10vw;
                            top: -2vw;
                        }
                        &:nth-child(2) {
                            height: 100px;
                            right: 30vw;
                            top: 11vw;
                        }
                        &:nth-child(3) {
                            width: 100px;
                            right: 0;
                            top: 15vw;
                        }
                    }
                }
                div&-product {
                    top: 10vw;
                    & .img {
                        width: auto;
                        &:nth-child(1) {
                            height: auto;
                            width: 80vw;
                            right: -20px;
                        }
                        &:nth-child(2) {
                            height: auto;
                            width: 20vw;
                            right: 30vw;
                        }
                        &:nth-child(3) {
                            height: auto;
                            width: 10vw;
                            right: 69vw;
                            top: 17vw;
                        }
                        &:nth-child(4) {
                            height: auto;
                            width: 12vw;
                            right: 3.5vw;
                            top: 44vw;
                        }
                    }
                }
                div&-pics {
                    top: -2vw;
                    & .img {
                        &:nth-child(1) {
                            height: auto;
                            width: 40vw;
                            right: 55vw;
                        }
                        &:nth-child(2) {
                            height: auto;
                            width: 50vw;
                            right: 12vw;
                            top: 45vw;
                        }
                    }
                }
            }
        }
        &__features {
            & h2 {
                font-size: 5vw;
            }
            &-cards {
                flex-direction: column;
                align-items: center;
                &-card {
                    width: 70%;
                    margin: 0;
                    &-pic {
                        & .img {
                            &:nth-child(1) {
                                border-radius: 4vw;
                            }
                        }
                    }
                    &-info {
                        padding: 20px 0;
                        & h3 { 
                            font-size: 4vw;   
                            line-height: normal;   
                        }
                        & p {
                            font-size: 2.5vw;
                            line-height: normal;
                        }
                        & a {
                            font-size: 3vw;
                        }
                    }
                    &:nth-child(1) &-pic {
                        & .img {
                            &:nth-child(2) {
                                width: 14vw;
                            }
                            &:nth-child(3) {
                                width: 25vw;
                                top: 10vw;
                            }
                        }
                    }
                    
                    &:nth-child(2) {
                        margin-top: 5vw;
                    }
                    &:nth-child(2) &-pic {
                        & .img {
                            width: 21vw;
                            border-radius: 1.7vw;
                            &:nth-child(1) {
                                height: auto;
                                border-radius: 3vw;
                            }
                            &:nth-child(4) {
                                top: 15vw;
                            }
                        }
                    }
                    
                    
                    &:nth-child(3) {
                        margin-top: 8vw;
                    }
                    &:nth-child(3) &-pic {
                        & .img {
                            &:nth-child(2) {
                                width: 18vw;
                            }
                            &:nth-child(3) {
                                width: 22vw;
                            }
                            &:nth-child(4) {
                                width: 27vw;
                            }
                        }
                    }
                }
            }
        }

        &__documentation {
            margin-top: 150px;
            padding-bottom: 100px;
            overflow: hidden;
            & .wrapper {
                padding: 0 50px;
                max-width: 1330px;
            }

            & h3 {
                font-size: 3.3vw;
                line-height: normal;
            }
            & p {
                font-size: 2.7vw;
                line-height: normal;
            }
    
            &-background {
                width: auto;
                height: 100%;
                top: 0;
                transform: translateX(50%);
            }
    
            &-cards {
                &-card {
                    align-items: center;
                    margin-top: 30px;
                    &-img {
                        width: 50%;
                        & .img {
                            &:first-child {
                                width: 100%;
                            }
                            &:last-child {
                                bottom: -6vw;
                                width: 100%;
                            }
                            border-radius: 4.5vw;
                        }
                    }
                    &-info {
                        width: 50%;
                        margin: 0 40px;
                        &-button {
                            font-size: 2.2vw;
                            padding: 20px 30px;
                            margin-top: 20px;
                            margin-bottom: 20px;
                        }
                    }
    
                    &:first-child {
                        margin-bottom: 30px;
                        & .img {
                            margin-right: 0;
                        }
                        & .main__documentation-cards-card-info {
                            margin-top: 20px;
                        }
                    }
                    &:last-child {
                        & .img {
                            margin-left: 0;
                            &:last-child {
                                left: none;
                                right: 0;
                            }
                        }
                        & .main__documentation-cards-card-info {
                            margin-top: 16px;
                        }
                    }
                }
            }
    
    
            &-picture {
                &-dots {
                    & img {
                        &:first-child {
                            width: 22vw;
                            top: 18vw;
                            left: 8.5vw;
                        }
                        &:last-child {
                            height: 22vw;
                            bottom: 11vw;
                            right: 5vw;
                        }
                    }
                }
    
                &-circs {
                    &[data-num="1"] {
                        & img {
                            width: 7vw;
    
                            &:first-child {
                                top: 5vw;
                                left: 5vw;
                            }
                            &:last-child {
                                top: 6vw;
                                right: 20vw;
                            }
                        }
                    }
    
                    &[data-num="2"] {
                        & img {
                            &:first-child {
                                width: 32vw;
                                top: 15vw;
                                left: auto;
                                right: 1vw;
                            }
                            &:last-child {
                                width: 27vw;
                                bottom: 15vw;
                                right: auto;
                                left: 1vw;
                            }
                        }
                    }
                }
            }   
        }

        &__testimonials {
            &-info {
                & h2 {
                    font-size: 5vw;
                }
                & p {
                    font-size: 2.8vw;
                }
                &-cards {
                    height: 40vw;
                    &-wrapper {
                        width: 76vw;
                    }
                }
                &-card {
                    border-radius: 2vw;
                }
            }

            &-picture {
                &-img {
                    & .img {
                        &:nth-child(1) {
                            width: 16vw;
                            top: 13vw;
                            left: 5vw;
                        }
                        &:nth-child(2) {
                            display: none;
                        }
                        &:nth-child(3) {
                            width: 14vw;
                            top: 70vw;
                            left: 3vw;
                        }
    
    
                        &:nth-child(4) {
                            width: 14vw;
                            top: 8vw;
                            right: 3vw;
                        }
                        &:nth-child(5) {
                            display: none;
                        }
                        &:nth-child(6) {
                            width: 10vw;
                            top: 80vw;
                            right: 40vw;
                        }
                    }
                }

                &-background {
                    & img {
                        width: 50vw;

                        &:nth-child(1) {
                            right: 5vw;
                        }

                        &:nth-child(2) {
                            top: 45vw;
                            left: 5vw;
                        }
                    }
                }
            }
        }
    }
}

